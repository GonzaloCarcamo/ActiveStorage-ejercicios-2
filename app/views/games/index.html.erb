<p id="notice"><%= notice %></p>

<h1>Listado de Juegos</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><button><%= link_to 'Detalle', game %></button></td>
        <td><button><%= link_to 'Editar', edit_game_path(game) %></button></td>
        <td><button><%= link_to 'Eliminar', game, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Juego', new_game_path %>
